#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main() {
	float ef, nf, np, p1, p2, p3;
	char s;
	do {
		cout << "Introduce la nota practica: " << endl;
		cin >> np;
		cout << "Introduce la nota del primer parcial: " << endl;
		cin >> p1;
		cout << "Introduce la nota del segundo parcial: " << endl;
		cin >> p2;
		cout << "Introduce la nota del tercer parcial: " << endl;
		cin >> p3;
		cout << "Introduce la nota del examen final: " << endl;
		cin >> ef;
		nf =(np*0.2)+(((p1+p2+p3)/3)*0.4)+(ef*0.4);
		cout << "La nota final es: " << nf << endl;
		cout<< "Desea continuar  Introduzca Y para continuar y N para salir"<<endl;
        cin>> s;
	}
	while (s=='Y');
	
	getch ();
}
